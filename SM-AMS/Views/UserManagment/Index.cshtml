@model List<SM_AMS.Models.UserManagmentModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-body">
        <div align="right">
            <input class="mb-2 btn btn-success mr-2" type="button" value="Add" onclick="redirectToCreate()" />
        </div>
        <h6 class="card-subtitle mb-2 text-muted"> User Managment</h6>
        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Branch</th>
                    <th>User type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>@user.Branch</td>
                        <td>@user.UserType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
    function redirectToCreate() {
        window.location.href = "/UserManagment/Create";
    }
</script>

