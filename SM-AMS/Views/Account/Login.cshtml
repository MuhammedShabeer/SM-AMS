@model LoginViewModel
@{
    Layout = null;
}
<title>SM-AMS</title>
<link href="~/css/login.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="wrapper">
    <div class="container">
        <div class="col-left">
            <div class="login-text">
                <h2>SM-AMS</h2>
                <p>
                    SM-AMS is An attendance management system is a software solution that automates the process of tracking employee attendance, leaves, and absences. It helps organizations monitor attendance trends, generate reports, and ensure compliance with labor laws and policies. It also calculates employee salaries accurately based on attendance records, leading to increased productivity and reduced errors.
                </p>
            </div>
        </div>
        <div class="col-right">
            <div class="login-form">
                <h2>Login</h2>
                @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <p>
                        @Html.LabelFor(m => m.BranchID,"Branch", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.BranchID, (SelectList)ViewBag.BranchesList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BranchID, "", new { @class = "text-danger" })
                    </p>
                    <p>
                        @Html.LabelFor(m => m.UserName, new { @class = "control-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </p>
                    <p>
                        @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <p>
                                <button type="submit" class="btn-login">Login</button>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p>
                                <a class="mt-15px" href="">Forget password?</a>
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>